{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vite-plugin-pwa/client"
    ]
  },
  "include": ["src"]
} 